/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": false,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "paths": {
      "ngx-smz-ui": ["./dist/ngx-smz-ui"],
      "ngx-smz-ui-layout": ["./dist/ngx-smz-ui-layout"],
      "@components/*": ["./projects/cronos/src/app/ui/components/*"],
      "@environments/*": ["./projects/cronos/src/environments/*"],
      "@features/*": ["./projects/cronos/src/app/ui/features/*"],
      "@models/*": ["./projects/cronos/src/app/auto-generated/models/*", "./projects/cronos/src/app/models/*"],
      "@services/*": ["./projects/cronos/src/app/auto-generated/services/*", "./projects/cronos/src/app/services/*"],
      "@state/*": ["./projects/cronos/src/app/auto-generated/state/*", "./projects/cronos/src/app/state/*"],
      "@pages/*": ["./projects/cronos/src/app/ui/pages/*"],
      "@pipes/*": ["./projects/cronos/src/app/ui/pipes/*"],
      "@routes": ["./projects/cronos/src/routes"],
      "@utils/*": ["./projects/cronos/src/app/utils/*"],
    },
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
