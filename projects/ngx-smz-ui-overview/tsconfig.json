{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../../dist/out-tsc/app",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "ngx-smz-ui": [
        "../../dist/ngx-smz-ui/ngx-smz-ui",
        "../../dist/ngx-smz-ui"
      ],
      "@components/*": ["src/app/ui/components/*"],
      "@demos/*": ["src/app/demos/*"],
      "@environments/*": ["src/environments/*"],
      "@features/*": ["src/app/ui/features/*"],
      "@models/*": ["src/app/models/*"],
      "@pipes/*": ["src/app/ui/pipes/*"],
      "@routes": ["src/routes"],
      "@services/*": ["src/app/services/*"],
      "@states/*": ["src/app/state/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "useDefineForClassFields": false,
    // strictNullChecks => corrige erros no code generator
    "strictNullChecks": false,
  },
  "angularCompilerOption": {
    "strictTemplates": true
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts"],
}
